<UserControl
    x:Class="ToDo.Client.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:ToDo.Extensions.Resx;assembly=ToDo.Extensions"
    xmlns:local="clr-namespace:ToDo.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Border
        Margin="2,10,0,0"
        HorizontalAlignment="Stretch"
        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
        BorderThickness="1"
        CornerRadius="10,0,0,10">
        <StackPanel
            Margin="20,10,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Orientation="Vertical">
            
            <ui:TextBlock
                Margin="0,10,0,20"
                Appearance="Primary"
                FontTypography="Title"
                Text="{ext:Resx SettingsTitle}" />

            <!--theme switcher-->
            <ui:TextBlock
                Margin="0,0,0,5"
                Appearance="Primary"
                FontTypography="Subtitle"
                Text="{ext:Resx Theme}" />
            <RadioButton
                x:Name="Light"
                Command="{Binding ChangeThemeCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Name}"
                Content="{ext:Resx Light}"
                GroupName="Theme"
                IsChecked="True" />
            <RadioButton
                x:Name="Dark"
                Command="{Binding ChangeThemeCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Name}"
                Content="{ext:Resx Dark}"
                GroupName="Theme"
                IsChecked="False" />

            <!--language switch-->
            <ui:TextBlock
                Margin="0,20,0,5"
                Appearance="Primary"
                FontTypography="Subtitle"
                Text="{ext:Resx Language}" />
            <RadioButton
                x:Name="Chinese"
                Command="{Binding ChangeLangCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Name}"
                Content="{ext:Resx Chinese}"
                GroupName="Lang"
                IsChecked="True" />
            <RadioButton
                x:Name="English"
                Command="{Binding ChangeLangCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Name}"
                Content="{ext:Resx English}"
                GroupName="Lang"
                IsChecked="False" />

            <!--about-->
            <ui:TextBlock
                Margin="0,20,0,5"
                Appearance="Primary"
                FontTypography="Subtitle"
                Text="{ext:Resx About}" />
            <Label Content="{ext:Resx AboutApp}" FontFamily="Consolas" FontSize="12" Margin="0,0,0,10"/>
            <ui:Button Content="{ext:Resx CheckUpdate}"  Icon="{ui:SymbolIcon PhoneUpdateCheckMark20}" />
        </StackPanel>

    </Border>
</UserControl>
