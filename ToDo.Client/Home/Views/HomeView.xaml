<UserControl
    x:Class="ToDo.Client.Home.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="clr-namespace:ToDo.Extensions.Converter;assembly=ToDo.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lang="clr-namespace:ToDo.Extensions.Resx;assembly=ToDo.Extensions"
    xmlns:local="clr-namespace:ToDo.Client.Home.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:ToDo.Client.Home.ViewModels"
    x:Name="HomeUserControl"
    d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="Arial"
    mc:Ignorable="d">

    <UserControl.Resources>
        <cvt:StateToColorConverter x:Key="StateToColorConverter" />
        <cvt:PriorityCommandConverter x:Key="PriorityCommandConverter" />
        <cvt:MultiMenuConverter x:Key="MultiMenuConverter" />
        <!--<viewmodels:PriorityCommandArgs x:Key="PriorityCommandArgs"/>-->
    </UserControl.Resources>

    <!--<i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>-->

    <Border
        Margin="2,10,0,0"
        HorizontalAlignment="Stretch"
        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
        BorderThickness="1"
        CornerRadius="10,0,0,10">

        <Grid
            Margin="20,10,20,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="50" />
                <RowDefinition />
            </Grid.RowDefinitions>


            <!--  title  -->
            <ui:TextBlock
                Grid.Row="0"
                Margin="0,10,0,10"
                Appearance="Primary"
                FontTypography="Title"
                Text="{lang:Resx HomeTitle}" />


            <!--  content  -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="100" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  card  -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  summary  -->
                    <Border
                        Grid.Column="0"
                        Margin="10,0,20,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#F0F8FF"
                        BorderBrush=" #F0F8FF"
                        BorderThickness="1"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="80"
                                Direction="90"
                                Opacity="0.3"
                                ShadowDepth="0"
                                Color=" #1E90FF" />
                        </Border.Effect>

                        <ui:CardAction
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            IsChevronVisible="False">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Width="60"
                                    Margin="15,10,0,10"
                                    Source="/ToDo.Resources;component/AppIcon/summary.png" />

                                <StackPanel
                                    Grid.Column="1"
                                    Margin="20,10,10,10"
                                    VerticalAlignment="Center">
                                    <ui:TextBlock
                                        Margin="0,0,0,3"
                                        FontSize="14"
                                        FontTypography="BodyStrong"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{lang:Resx Summary}"
                                        TextWrapping="WrapWithOverflow" />
                                    <ui:TextBlock
                                        Appearance="Secondary"
                                        FontSize="20"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{Binding InfoModel.SummaryCount}"
                                        TextWrapping="WrapWithOverflow" />
                                </StackPanel>
                            </Grid>
                        </ui:CardAction>
                    </Border>

                    <!--  completed  -->
                    <Border
                        Grid.Column="1"
                        Margin="10,0,20,20"
                        Background="#F0FFF0"
                        BorderBrush="#F0FFF0"
                        BorderThickness="1"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="70"
                                Direction="90"
                                Opacity="0.4"
                                ShadowDepth="0"
                                Color=" #90EE90" />
                        </Border.Effect>

                        <ui:CardAction
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            IsChevronVisible="False">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Width="60"
                                    Margin="15,10,0,10"
                                    Source="/ToDo.Resources;component/AppIcon/completed.png" />

                                <StackPanel
                                    Grid.Column="1"
                                    Margin="20,10,10,10"
                                    VerticalAlignment="Center">
                                    <ui:TextBlock
                                        Margin="0,0,0,3"
                                        FontSize="14"
                                        FontTypography="BodyStrong"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{lang:Resx Completed}"
                                        TextWrapping="WrapWithOverflow" />
                                    <ui:TextBlock
                                        Appearance="Secondary"
                                        FontSize="20"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{Binding InfoModel.CompletedCount}"
                                        TextWrapping="WrapWithOverflow" />
                                </StackPanel>
                            </Grid>
                        </ui:CardAction>
                    </Border>

                    <!--  percent  -->
                    <Border
                        Grid.Column="2"
                        Margin="10,0,20,20"
                        Background=" #FFFFF0"
                        BorderBrush="#FFFFf0"
                        BorderThickness="1"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="70"
                                Direction="90"
                                Opacity="0.6"
                                ShadowDepth="0"
                                Color=" #F0E68C" />
                        </Border.Effect>
                        <ui:CardAction
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            IsChevronVisible="False">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Width="60"
                                    Margin="15,10,0,10"
                                    Source="/ToDo.Resources;component/AppIcon/percent.png" />

                                <StackPanel
                                    Grid.Column="1"
                                    Margin="20,10,10,10"
                                    VerticalAlignment="Center">
                                    <ui:TextBlock
                                        Margin="0,0,0,3"
                                        FontSize="14"
                                        FontTypography="BodyStrong"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{lang:Resx Percent}"
                                        TextWrapping="WrapWithOverflow" />
                                    <ui:TextBlock
                                        Appearance="Secondary"
                                        FontSize="20"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{Binding InfoModel.Percentage}"
                                        TextWrapping="WrapWithOverflow" />
                                </StackPanel>
                            </Grid>
                        </ui:CardAction>
                    </Border>

                    <!--  note  -->
                    <Border
                        Grid.Column="3"
                        Margin="10,0,20,20"
                        Background="#FFF0F5"
                        BorderBrush="#FFF0F5"
                        BorderThickness="1"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="70"
                                Direction="90"
                                Opacity="0.3"
                                ShadowDepth="0"
                                Color=" #EE82EE" />
                        </Border.Effect>
                        <ui:CardAction
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            IsChevronVisible="False">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Width="60"
                                    Margin="15,10,0,10"
                                    Source="/ToDo.Resources;component/AppIcon/note.png" />

                                <StackPanel
                                    Grid.Column="1"
                                    Margin="20,10,10,10"
                                    VerticalAlignment="Center">
                                    <ui:TextBlock
                                        Margin="0,0,0,3"
                                        FontSize="14"
                                        FontTypography="BodyStrong"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{lang:Resx Memo}"
                                        TextWrapping="WrapWithOverflow" />
                                    <ui:TextBlock
                                        Appearance="Secondary"
                                        FontSize="20"
                                        Foreground="{DynamicResource DarkTextFill}"
                                        Text="{Binding InfoModel.MemosCount}"
                                        TextWrapping="WrapWithOverflow" />
                                </StackPanel>
                            </Grid>
                        </ui:CardAction>
                    </Border>
                </Grid>

                <!--  main  -->
                <Grid
                    Grid.Row="1"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  待办事项  -->
                    <Grid
                        Grid.Column="0"
                        Margin="10,20,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                        <Grid.RowDefinitions>
                            <RowDefinition MaxHeight="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  title  -->
                        <Grid
                            Grid.Row="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MaxWidth="110" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <ui:TextBlock
                                Grid.Column="0"
                                Margin="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Appearance="Primary"
                                FontTypography="Subtitle"
                                Text="{lang:Resx Priority}">
                                <ui:TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="30"
                                        Direction="90"
                                        Opacity="1"
                                        ShadowDepth="0"
                                        Color=" #FF00FF" />
                                </ui:TextBlock.Effect>
                            </ui:TextBlock>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ui:Button
                                    Margin="0,0,10,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Command="{Binding ShowAddPriorityCommand}"
                                    Icon="{ui:SymbolIcon TableAdd28}" />
                                <ui:Button
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Command="{Binding RefreshCommand}"
                                    Icon="{ui:SymbolIcon ArrowClockWise12}" />


                            </StackPanel>
                        </Grid>

                        <ui:DynamicScrollViewer Grid.Row="1">
                            <ItemsControl x:Name="Priorities" ItemsSource="{Binding Priorities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="5"
                                            Background="{Binding State, Converter={StaticResource StateToColorConverter}, UpdateSourceTrigger=PropertyChanged}"
                                            BorderThickness="1"
                                            CornerRadius="10">

                                            <ui:CardControl
                                                Margin="0"
                                                Padding="10,10,10,10"
                                                Background="Transparent"
                                                BorderBrush="Transparent">

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDoubleClick">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.EditPriorityCommand, Source={x:Reference HomeUserControl}}" CommandParameter="{Binding Id}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>

                                                <ui:CardControl.Header>
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <ui:TextBlock
                                                                Margin="3,0,0,0"
                                                                FontSize="16"
                                                                FontTypography="BodyStrong"
                                                                Foreground="{DynamicResource DarkTextFill}"
                                                                Text="{Binding Title}"
                                                                TextWrapping="WrapWithOverflow" />
                                                            <ui:TextBlock
                                                                Margin="20,0,0,0"
                                                                VerticalAlignment="Center"
                                                                FontSize="12"
                                                                FontTypography="Subtitle"
                                                                Foreground="Gray"
                                                                Text="{Binding DDL, StringFormat={}{0:'DDL': yyyy-MM-dd}}"
                                                                TextWrapping="WrapWithOverflow" />
                                                        </StackPanel>

                                                        <ui:TextBlock
                                                            Margin="3,0,0,0"
                                                            FontSize="13"
                                                            Foreground="{DynamicResource DarkTextFill}"
                                                            Text="{Binding Description}"
                                                            TextWrapping="WrapWithOverflow" />
                                                    </StackPanel>
                                                </ui:CardControl.Header>
                                                <ui:DropDownButton
                                                    BorderBrush="{DynamicResource DarkBorder}"
                                                    Content="{Binding State}"
                                                    Foreground="{DynamicResource DarkTextFill}"
                                                    Icon="{ui:SymbolIcon WindowEdit16}">
                                                    <ui:DropDownButton.Flyout>
                                                        <ContextMenu FontFamily="Consolas" FontWeight="Bold">
                                                            <MenuItem
                                                                x:Name="Normal"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Header="{lang:Resx Normal}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="Completed"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource CompletedText}"
                                                                Header="{lang:Resx Completed}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="Priority"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource EmergencyText}"
                                                                Header="{lang:Resx PriorityThings}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="RemindTomorrow"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource RemindTomorrowText}"
                                                                Header="{lang:Resx RemindTomorrow}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="Discard"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource Discard}"
                                                                Header="{lang:Resx Discard}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </ui:DropDownButton.Flyout>
                                                </ui:DropDownButton>
                                            </ui:CardControl>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ui:DynamicScrollViewer>
                    </Grid>

                    <!--  备忘录  -->
                    <Grid
                        Grid.Column="1"
                        Margin="10,25,20,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                        <Grid.RowDefinitions>
                            <RowDefinition MaxHeight="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  title  -->
                        <ui:TextBlock
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            Appearance="Primary"
                            FontTypography="Subtitle"
                            Text="{lang:Resx Memo}">

                            <ui:TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="30"
                                    Direction="0"
                                    Opacity="1"
                                    ShadowDepth="0"
                                    Color="Red" />
                            </ui:TextBlock.Effect>
                        </ui:TextBlock>

                        <ui:DynamicScrollViewer Grid.Row="1">
                            <ItemsControl x:Name="Memo" ItemsSource="{Binding Memos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="5"
                                            Background="{Binding State, Converter={StaticResource StateToColorConverter}, UpdateSourceTrigger=PropertyChanged}"
                                            BorderThickness="1"
                                            CornerRadius="10">

                                            <ui:CardControl
                                                Margin="0"
                                                Padding="10,10,10,10"
                                                Background="Transparent"
                                                BorderBrush="Transparent">
                                                <ui:CardControl.Header>
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <ui:TextBlock
                                                                Margin="3,0,0,0"
                                                                FontSize="14"
                                                                FontTypography="BodyStrong"
                                                                Foreground="{DynamicResource DarkTextFill}"
                                                                Text="{Binding Title}"
                                                                TextWrapping="WrapWithOverflow" />
                                                            <ui:TextBlock
                                                                Margin="20,0,0,0"
                                                                VerticalAlignment="Bottom"
                                                                FontSize="12"
                                                                FontTypography="Subtitle"
                                                                Foreground="Gray"
                                                                Text="{Binding DDL, StringFormat={}{0:'ExceptDate': yyyy-MM-dd}}"
                                                                TextWrapping="WrapWithOverflow" />
                                                        </StackPanel>

                                                        <ui:TextBlock
                                                            Margin="3,0,0,0"
                                                            FontSize="13"
                                                            Foreground="{DynamicResource DarkTextFill}"
                                                            Text="{Binding Description}"
                                                            TextWrapping="WrapWithOverflow" />
                                                    </StackPanel>
                                                </ui:CardControl.Header>
                                                <ui:DropDownButton
                                                    BorderBrush="{DynamicResource DarkBorder}"
                                                    Content="{Binding State}"
                                                    Foreground="{DynamicResource DarkTextFill}"
                                                    Icon="{ui:SymbolIcon WindowEdit16}">
                                                    <ui:DropDownButton.Flyout>
                                                        <ContextMenu FontFamily="Consolas" FontWeight="Bold">
                                                            <MenuItem
                                                                x:Name="Normal"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Header="{lang:Resx Normal}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="Completed"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource CompletedText}"
                                                                Header="{lang:Resx Completed}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="Priority"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource EmergencyText}"
                                                                Header="{lang:Resx PriorityThings}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="RemindTomorrow"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource RemindTomorrowText}"
                                                                Header="{lang:Resx RemindTomorrow}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>

                                                            <MenuItem
                                                                x:Name="Discard"
                                                                Command="{Binding DataContext.ChangeStatusCommand, Source={x:Reference HomeUserControl}}"
                                                                Foreground="{DynamicResource Discard}"
                                                                Header="{lang:Resx Discard}">
                                                                <MenuItem.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiMenuConverter}">
                                                                        <Binding Path="Name" RelativeSource="{RelativeSource Mode=Self}" />
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}" />
                                                                    </MultiBinding>
                                                                </MenuItem.CommandParameter>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </ui:DropDownButton.Flyout>
                                                </ui:DropDownButton>
                                            </ui:CardControl>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ui:DynamicScrollViewer>

                    </Grid>
                </Grid>
            </Grid>
            <ui:SnackbarPresenter x:Name="SnackbarPresenter" Grid.Row="1" />
        </Grid>
    </Border>
</UserControl>
