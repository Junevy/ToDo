<UserControl
    x:Class="ToDo.Client.Home.Views.AddPriorityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:ToDo.Extensions.Resx;assembly=ToDo.Extensions"
    xmlns:local="clr-namespace:ToDo.Client.Home.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:ToDo.Client.Home.ViewModels"
    Width="700"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:AddPriorityViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="400"
    
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  title  -->
        <Grid Grid.Row="0">
            <ui:TitleBar Title="{lang:Resx AddPriorityTitle}" CloseWindowByDoubleClickOnIcon="True" >
                <ui:TitleBar.Icon>
                    <ui:ImageIcon Source="/ToDo.Resources;component/AppIcon/icon.ico" />
                </ui:TitleBar.Icon>
            </ui:TitleBar>
        </Grid>

        <StackPanel
            Grid.Row="1"
            Margin="10,50,10,10"
            Orientation="Vertical">
            <ui:TextBox
                Width="300"
                Height="40"
                Margin="10"
                HorizontalAlignment="Center"
                PlaceholderText="{lang:Resx PriorityTip}"
                Text="{Binding PriorityDTO.Title}" />

            <ui:TextBox TextWrapping="Wrap"
                Width="300"
                Height="80"
                Margin="10"
                HorizontalAlignment="Center"
                PlaceholderText="{lang:Resx DescriptionTip}"
                Text="{Binding PriorityDTO.Desciption}" />

            <ui:CalendarDatePicker
                Width="300"
                Height="40"
                Margin="10"
                HorizontalAlignment="Center"
                Content="{lang:Resx ChooseDDL}" />

            <ui:DropDownButton Width="300" Height="40" HorizontalAlignment="Center" Content="DropButton" >
                <ui:DropDownButton.Flyout>
                    <ContextMenu IsTextSearchEnabled="True">
                        <MenuItem Header="test"/>
                        <MenuItem Header="test"/>
                        <MenuItem Header="test"/>
                    </ContextMenu>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
        </StackPanel>

    </Grid>

</UserControl>
