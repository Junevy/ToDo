<UserControl
    x:Class="ToDo.Client.Login.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToDo.Client.Login.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:ToDo.Client.Login.ViewModels"
    Width="600"
    Height="350"
    d:DataContext="{d:DesignInstance Type=vm:LoginViewModel}"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    FontFamily="Arial"
    mc:Ignorable="d">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--<Image Margin="0,20,20,20"
            Grid.Column="0"
            Source="/ToDo.Resources;component/AppIcon/app_background.jpg"
            Stretch="UniformToFill" />-->
        <Grid
            Grid.Column="0"
            Margin="0,0,80,0"
            Background="#5689fb">

            <Path
                Width="80"
                Height="80"
                Data="{StaticResource other_icon}"
                Fill="#fffff9"
                Stretch="UniformToFill"
                Stroke="#fffff9" />

        </Grid>

        <Grid
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="30" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition MaxHeight="50" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Cascadia Mono"
                FontSize="22"
                FontWeight="Bold"
                Foreground="{StaticResource TextFillColorPrimaryBrush}"
                Text="How are you today?" />

            <!--  account  -->
            <StackPanel Grid.Row="1" Margin="10,10,10,0">
                <TextBlock
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Normal"
                    Foreground="SlateGray"
                    Text="Account" />
                <ui:TextBox
                    Grid.Column="1"
                    Width="200"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    ui:AllowDrop="False"
                    BorderThickness="1.5"
                    FontSize="14"
                    Text="" />
            </StackPanel>

            <!--  password  -->
            <StackPanel Grid.Row="2" Margin="10,10,10,0">
                <TextBlock
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Normal"
                    Foreground="SlateGray"
                    Text="Password" />
                <ui:PasswordBox
                    Grid.Column="1"
                    MinWidth="200"
                    MaxWidth="200"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    ui:AllowDrop="False"
                    BorderThickness="1.5"
                    FontSize="14"
                    Text="" />
            </StackPanel>

            <ui:ToggleSwitch
                Grid.Row="3"
                Width="150"
                Height="30"
                Margin="10,30,10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                OffContent="Remember Me"
                OnContent="Remember Me" />

            <!--  button, login and register  -->
            <StackPanel
                Grid.Row="4"
                Margin="10,20,10,10"
                Orientation="Horizontal">
                <ui:Button
                    Grid.Column="0"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    Command="{Binding LoginCommand}"
                    Content="Login" />

                <ui:Button
                    Grid.Column="1"
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    Background="#5689fb"
                    Command="{Binding ChangeThemeCommand}"
                    Content="Register"
                    Foreground="Black" />

            </StackPanel>


        </Grid>
    </Grid>


</UserControl>
