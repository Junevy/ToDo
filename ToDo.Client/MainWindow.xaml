<Window
    x:Class="ToDo.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:ToDo.Extensions.Resx;assembly=ToDo.Extensions"
    xmlns:local="clr-namespace:ToDo.Client.Login.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ToDo-Keep self"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <!--<TextBlock FontSize="22" Text="Logined View" />-->
        <ui:ToggleSwitch
            x:Name="LangSwitch"
            Command="{Binding ChangeLangCommand}"
            CommandParameter="{Binding ElementName=LangSwitch, Path=IsChecked}"
            OffContent="中文-简体"
            OnContent="en-US"/>
        
        <Button
            Command="{Binding ChangeLangCommand}"
            CommandParameter="{Binding ElementName=LangSwitch, Path=IsChecked}"
            Content="test111" />

        <TextBlock FontSize="20" Text="{lang:Resx HRU}" />
        <!--<Path
            Width="1"
            Height="1"
            Data="{StaticResource app_icon}"
            Fill="Purple" />-->

    </StackPanel>
</Window>
